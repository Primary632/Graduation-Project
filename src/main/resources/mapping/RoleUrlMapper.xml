<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.peng.elderlymanage.dao.RoleUrlDao">

    <!-- 开启二级缓存 -->
<!--    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.peng.elderlymanage.entity.RoleUrl">
        <id column="id" property="id"/>
        <result column="rid" property="rid" />
        <result column="path" property="path" />
        <result column="name" property="name" />
        <result column="label" property="label" />
        <result column="icon" property="icon" />
        <result column="url" property="url" />
        <result column="childrenid" property="childrenid" />
        <result column="redirest" property="redirest" />
        <collection property="children"  column="childrenid" select="com.peng.elderlymanage.dao.RoleChildrenDao.selectChildrenMenu">

        </collection>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
      id,  rid, path, name, label, icon, url, childrenid, redirest
    </sql>
    <select id="selectMenu" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/> from rt_role_url
        ${ew.customSqlSegment}
    </select>
</mapper>
