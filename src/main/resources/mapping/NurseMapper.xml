<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.peng.elderlymanage.dao.NurseDao">



    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.peng.elderlymanage.entity.Nurse">
        <id column="id" property="id" />
        <result column="nname" property="nname" />
        <result column="address" property="address" />
        <result column="phone" property="phone" />
        <result column="email" property="email" />
        <result column="salary" property="salary" />
        <result column="level" property="level" />
        <result column="created_time" property="createdTime" />
        <result column="updated_time" property="updateTime" />
        <result column="status" property="status" />

        <association property="nurseLevel" column="level" select="com.peng.elderlymanage.dao.NurseLevelDao.selectOneById">
            <result column="level_name" property="levelName"/>
        </association>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, nname, address, phone, email, level,salary,  created_time, updated_time, status
    </sql>
<select id="selectAll" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"/> from rt_nurse
        ${ew.customSqlSegment}
</select>
    <update id="updateByIdToStatus">
        update rt_nurse set status="3",updated_time=#{today}
            ${ew.customSqlSegment}
    </update>
</mapper>
