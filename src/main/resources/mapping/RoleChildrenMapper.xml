<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.peng.elderlymanage.dao.RoleChildrenDao">

    <!-- 开启二级缓存 -->
<!--    <cache type="org.mybatis.caches.ehcache.LoggingEhcache"/>-->

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.peng.elderlymanage.entity.RoleChildren">
        <id column="id" property="id"/>
        <result column="cid" property="cid" />
        <result column="path" property="path" />
        <result column="name" property="name" />
        <result column="label" property="label" />
        <result column="url" property="url" />
        <result column="icon" property="icon" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, path, name, label, url,cid, icon
    </sql>
    <select id="selectChildrenMenu" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from rt_role_children where cid = #{rid}
    </select>
</mapper>
